<%= link_to(image_tag("gliders/#{product.isbn}.jpg", :alt => 'Cover image', :class => 'cover'), show_path(product)) %>
<div class="info">
  <h2><%= product.name %></h2>
  <p><%= truncate_to_nearest_word(product.description, 300) %> &nbsp; <strong><em><%= link_to "More &raquo;".html_safe, show_path(product) %></em></strong></p>
</div>
