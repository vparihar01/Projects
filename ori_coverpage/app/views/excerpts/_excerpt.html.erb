<%= content_tag_for(:tr, excerpt, :class => cycle('odd', 'even')) do -%>
  <td><%= link_to_function(excerpt.title.name, "popupScribd('#{read_excerpt_url(excerpt)}')", :class => 'highlight extlink', :title => 'Read Excerpt') %></td>
  <td><%= excerpt.title.isbn %></td>
  <td><%= excerpt.title.copyright %></td>
  <td><%= link_to excerpt.title.collection.name, collection_path(excerpt.title.collection) unless excerpt.title.collection.nil? %></td>
  <% if defined?(show_admin) && show_admin -%>
    <td class="icon"><%= link_to(image_tag('buttons/admin/edit.gif', :alt => 'Edit'), edit_admin_excerpt_path(excerpt), :class => 'admin') %></td>
    <td class="icon last"><%= link_to(image_tag('buttons/admin/trash.gif', :alt => 'Delete'), admin_excerpt_path(excerpt), :method => :delete, :confirm => 'Are you sure you wish to delete this record?', :class => 'admin') %></td>
  <% end -%>
<% end -%>
