<h1><%= calculate_page_heading %></h1>

<table class="list" id="<%= controller.controller_name %>">
  <thead>
    <tr>
      <th class="first">Sales Team</th>
      <th>Sales Zone</th>
      <th>Category</th>
      <th class="last">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
  <% @contracts.each do |contract| %>
    <%= content_tag_for(:tr, contract, :class => cycle('odd', 'even')) do %>
      <td><%= link_to h(contract.sales_team), sales_team_url(contract.sales_team) %></td>
      <td><%= link_to h(contract.sales_zone), sales_zone_url(contract.sales_zone) %></td>
      <td><%= contract.category ? contract.category : 'All' %></td>
      <td><%= link_to 'View', contract_url(contract), :class => 'highlight' %></td>
    <% end %>
  <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="2">
        <%= will_paginate @contracts %>
      </td>
    </tr>
  </tfoot>
</table>
