<%= content_tag_for(:tr, line_item, :class => cycle('odd', 'even')) do %>
  <td><%= link_to(line_item.product_name, show_path(line_item.product)) %></td>
  <td><%= format_column_value(line_item) %></td>
  <td class="number"><%= number_to_currency(line_item.unit_amount) %></td>
  <td class="qty"><%= line_item.quantity %></td>
  <td class="number"><%= number_to_currency(line_item.total_amount) %></td>
<% end %>