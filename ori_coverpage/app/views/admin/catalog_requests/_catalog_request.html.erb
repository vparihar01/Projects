<%= content_tag_for(:tr, catalog_request, :class => cycle('odd', 'even')) do %>
  <td><%= catalog_request.address.name %></td>
  <td><%= catalog_request.address.street %></td>
  <td><%= catalog_request.created_at.to_s(:custom_with_time) %></td>
  <td class="icon"><%= link_to(image_tag('buttons/admin/edit.gif', :alt => 'Edit'), edit_admin_catalog_request_path(catalog_request), :class => 'admin') %></td>
  <td class="icon"><%= link_to(image_tag('buttons/admin/trash.gif', :alt => 'Delete'), admin_catalog_request_path(catalog_request), :method => :delete, :confirm => 'Are you sure you wish to delete this record?', :class => 'admin') %></td>
<% end -%>