<%= content_tag_for(:tr, coupon, :class => cycle('odd', 'even')) do -%>
  <td><%= link_to coupon.name, edit_admin_coupon_path(coupon), :class => 'highlight', :title => 'Edit' %></td>
  <td class="center"><%= coupon.start_on.to_s %></td>
  <td class="center"><%= coupon.end_on.to_s %></td>
  <td class="right"><%= coupon.percent ? number_to_percentage(coupon.amount*100, :precision => 2) : number_to_currency(coupon.amount) %></td>
  <td><%= coupon.code %></td>
  <td class="icon">
    <%= link_to(image_tag('buttons/admin/trash.gif', :alt => 'Delete'), admin_coupon_path(coupon), :method => :delete, :confirm => 'Are you sure you want to delete this page?', :title => 'Delete') %>
  </td>
<% end -%>
