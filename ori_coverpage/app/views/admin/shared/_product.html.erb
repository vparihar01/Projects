<%= content_tag_for(:tr, product, :class => cycle('odd', 'even')) do -%>
  <td><%= link_to product.name, edit_admin_product_path(product) %></td>
  <td><%= link_to product.id, show_path(product) %></td>
  <td class="center"><%= link_to( image_tag( 'buttons/admin/trash.gif', :alt => '' ), eval("delete_product_admin_#{assignable.class.to_s.downcase}_path(assignable, :product_id => product.id)"), :remote => true, :method => :delete, :confirm => 'Are you sure you wish to delete this record?', :class => 'highlight', :title => 'Delete' ) %></td>
<% end -%>
