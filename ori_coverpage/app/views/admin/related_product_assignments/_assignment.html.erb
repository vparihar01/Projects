<%= content_tag_for(:tr, assignment, :class => cycle('odd', 'even')) do -%>
  <td><%= link_to assignment.product.name, admin_product_path(assignment.product) %></td>
  <td><%= link_to assignment, edit_admin_related_product_assignment_path(assignment), :class => 'highlight' %></td>
  <td><%= link_to assignment.related_product.name, admin_product_path(assignment.related_product) %></td>
  <td class="icon"><%= link_to(image_tag('buttons/admin/trash.gif', :alt => 'Delete'), admin_related_product_assignment_path(assignment), :method => :delete, :confirm => 'Are you sure you want to delete this page?', :class => 'admin') %></td>
<% end -%>
