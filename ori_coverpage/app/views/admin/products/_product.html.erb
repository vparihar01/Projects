<%= content_tag_for(:tr, product, :class => cycle('odd', 'even')) do -%>
  <td><%= link_to(product_name_with_count(product), edit_admin_product_path(product), :class => 'highlight') %></td>
  <td><%= image_tag("asterix/new.gif") if product.new? %><%= image_tag("asterix/recent.gif") if product.recent? %></td>
  <td><%= link_to(product.id, show_path(product)) %></td>
  <td><%= product.isbn %></td>
  <td class="number"><%= number_to_currency(product.default_price) %></td>
  <td class="number"><%= product.version %></td>
  <td class="icon"><%= link_to(image_tag('buttons/admin/trash.gif', :alt => 'Delete'), admin_product_path(product), :class => 'admin', :method => :delete, :confirm => 'Are you sure you wish to delete this record?') %></td>
<% end -%>
