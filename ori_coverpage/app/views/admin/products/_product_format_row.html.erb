<%= content_tag_for(:tr, product_format, :class => cycle('odd', 'even')) do -%>
  <td><%= product_format.format.name %></td>
  <td class="center"><%= product_format.isbn %></td>
  <td class="right"><%= number_to_currency(product_format.price_list) %></td>
  <td class="right"><%= number_to_currency(product_format.price) %></td>
  <td class="center"><%= product_format.status %></td>
  <td class="right"><%= link_to_if(product_format.version > 1, product_format.version, versions_admin_product_format_path(product_format), :class => 'highlight') %></td>
  <td class="icon"><%= link_to_function(image_tag('buttons/admin/edit.gif', :alt => 'Edit'), visual_effect(:toggle_blind, dom_id(product_format, :edit), :duration => CONFIG[:blind_duration])) %></td>
  <td class="icon"><%= link_to( image_tag( 'buttons/admin/trash.gif', :alt => '' ), admin_product_format_path(product_format), :remote => true, :method => :delete, :confirm => 'Are you sure you wish to delete this record?', :title => 'Delete' ) %></td>
<% end -%>
