<div post-form="postToUrl"></div>

<div class="feed-container" feed="feedUrl">  
  <ul>
    <li ng-repeat="post in posts">
      <div class="btn-group pull-right">
        <button class="btn dropdown-toggle" data-toggle="dropdown">Action <span class="caret"></span></button>
        <ul class="dropdown-menu">
          <li><a href="#">Action</a></li>
          <li><a href="#">Another action</a></li>
          <li><a href="#">Something else here</a></li>
          <li class="divider"></li>
          <li><a href="#">Separated link</a></li>
          <li ng-show="post._links.delete"><a ng-click="deletePost(post)">delete</a></li>
        </ul>
      </div>

      <div>
        <%= image_tag "40x40.png" %>

        <a href="{{ post._links.actor.href }}">{{ post.actor_display_name }}</a>
          &gt;
        <a href="{{ post._links.subject.href }}">{{ post.subject_display_name }}</a>

        {{ post.created_at }}
      </div>

      <div ng-bind-html-unsafe="post.content_html"></div>
    </li>
  </ul>

  <div ng-show="older_url != null">
    <p>next feed fetch url: {{ older_url }}</p>
    <button ng-click="fetch_older()">fetch more</button>
  </div>
</div>